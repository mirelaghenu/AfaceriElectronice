@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Products";
}

<div class="container mb-2 mt-2">
    <div class="row">
        <div></div>
        <div class="ml-auto">
            <a href="/Product/New" class="btn btn-success" data-toggle="tooltip" title="New" data-placement="top">
                <span>New</span>
            </a>

            <button class="btn btn-info" data-toggle="tooltip" title="Edit" data-placement="top" onclick="Product.onEditBtnPress()">
                <span>Edit</span>
            </button>

            <button type="button" class="btn btn-danger" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="Product.onDelete()">
                <span>Delete</span>
            </button>
        </div>
    </div>
</div>
<br />
<br />

<table id="table" class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th hidden>Product Id</th>
            <th>Image</th>
            <th>Product name</th>
            <th>Price</th>
            <th>Is in stoc</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td hidden>@item.Id</td>
                <td><img style="width: 300px; height: 150px;" src="~/@item.ImagePath" alt="nu exista imagine momentan" /></td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td><input type="checkbox" checked="@item.IsAvailable" /></td>
            </tr>
        }

    </tbody>

</table>
