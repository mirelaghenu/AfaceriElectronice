@model IEnumerable<ProductTypeVM>;

@{
    ViewData["Title"] = "Categories";
}

<div class="container mb-2 mt-2">
    <div class="row">
        <div></div>
        <div class="ml-auto">
            <a href="/ProductType/New" class="btn btn-success" data-toggle="tooltip" title="New" data-placement="top">
                <span>New</span>
            </a>

            <button class="btn btn-info" data-toggle="tooltip" title="Edit" data-placement="top" onclick="ProductType.onEditBtnPress()">
                <span>Edit</span>
            </button>

            <button type="button" class="btn btn-danger" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="ProductType.onDelete()">
                <span>Delete</span>
            </button>
        </div>
    </div>
</div>

<table id="table" class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th hidden>Product Type Id</th>
            <th>Product category</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td hidden>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }

    </tbody>

</table>