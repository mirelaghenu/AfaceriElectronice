@model ProductVM

@inject IHttpContextAccessor HttpContextAccessor
@{
    var route = "https://localhost:44319/api/CartOperations/Add/{0}";
    route = string.Format(route, Model.Id);
}
<script>
    function callAddToCart(url) {
        const userAction = async () => {
            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
        }

        userAction();
    }
</script>
<h2 class="text-info">Product Details</h2>

<div>

    <div class="p-4 border rounded row">
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label>Product name</label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>Price</label>
                </div>
                <div class="col-4">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>Description</label>
                </div>
                <div class="col-4">
                    @Html.TextArea("Description", Model.Description, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4"></div>
                <div class="col-8">
                    <button onclick="callAddToCart('@route')" value="Add to bag" class="btn btn-primary form-control">Add to Bag</button>
                </div>
            </div>

        </div>

        <div class=" col-1">

        </div>

        <div class="col-3">
            <img src="~/@Model.ImagePath" alt="no image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
    </div>

    <br />

    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>

</div>